# Scrapers Environment Variables
# Copy this file to .env and fill in your actual values

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/careerblitz_db
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=careerblitz_db
DATABASE_USER=user
DATABASE_PASSWORD=password

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Scraping Configuration
SCRAPER_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36
SCRAPER_DELAY_MIN=1
SCRAPER_DELAY_MAX=3
SCRAPER_TIMEOUT=30
SCRAPER_MAX_RETRIES=3

# API Keys
LINKEDIN_API_KEY=your-linkedin-api-key
INDEED_API_KEY=your-indeed-api-key
GLASSDOOR_API_KEY=your-glassdoor-api-key
MONSTER_API_KEY=your-monster-api-key

# Proxy (optional)
PROXY_ENABLED=false
PROXY_URL=
PROXY_USERNAME=
PROXY_PASSWORD=

# Logging
LOG_LEVEL=INFO
LOG_FILE=scrapers.log
